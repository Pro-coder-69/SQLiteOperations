    <Button
        android:id="@+id/message_button"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="10sp"
        android:translationX="330dp"
        android:text="buy"/>

</LinearLayout>