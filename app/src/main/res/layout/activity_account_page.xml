<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".accountPageActivity">

    <Button
        android:id="@+id/uploaditembutton"
        android:layout_width="131dp"
        android:layout_height="64dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="80dp"
        android:onClick="uploadItem"
        android:text="upload item"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewmarketbutton"
        android:layout_width="131dp"
        android:layout_height="64dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="200dp"
        android:onClick="mainReyclerActivity"
        android:text="view market"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewdatabutton"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:onClick="view_data"
        android:text="@string/view_data"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editTextUpdateUser"
        android:layout_width="131dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="76dp"
        android:onClick="update"
        android:text="@string/update"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="136dp"
        android:hint="New Name"
        android:minHeight="48dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>